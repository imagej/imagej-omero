			</roles>
		</developer>
		<developer>
			<id>awalter17</id>
			<name>Alison Walter</name>
			<url>http://imagej.net/User:Awalter2</url>
			<roles>
				<role>developer</role>
			</roles>
		</developer>
	</developers>
	<contributors>
		<contributor>
			<name>Josh Moore</name>
			<url>http://imagej.net/User:Moore</url>
			<properties><id>joshmoore</id></properties>
